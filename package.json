{
  "name": "test",
  "version": "1.0.0",
  "description": "test application",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:AndriiBalaniuk/test.git"
  },
  "scripts": {
    "clean": "rimraf build public",
    "start": "export NODE_ENV=local && webpack-dev-server",
    "build": "npm run clean && export NODE_ENV=production && webpack -p --progress --colors --display-reasons --verbose --display-chunks",
    "build:dev": "npm run clean && export NODE_ENV=dev && webpack",
    "build:local": "npm run clean && export NODE_ENV=local && webpack",
    "build:doc": "documentation build src/*.js* -o public -f html",
    "test": "export NODE_ENV=test && jest --no-cache",
    "test:watch": "export NODE_ENV=test && jest --no-cache --watch",
    "test:coverage": "export NODE_ENV=test && jest --no-cache --coverage",
    "lint": "npm run npm-run-all lint:*",
    "lint:js": "eslint ./src/** --ext .jsx,.js --color -f stylish --fix",
    "lint:css": "stylelint './src/**/*.pcss' --color -r -f verbose --fix",
    "lint:doc": "documentation lint src/**/*.js*",
    "commitmsg": "commit-msg ${GIT_PARAMS}"
  },
  "lint-staged": {
    "*.{jsx,js}": [
      "npm run format",
      "eslint --color -f stylish --fix",
      "git add"
    ],
    "*.pcss": [
      "stylelint --color -r -f verbose --fix",
      "git add"
    ]
  },
  "license": "CC-BY-4.0",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.7.2",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^21.2.1",
    "lint-staged": "^4.2.3",
    "npm-run-all": "^4.1.1",
    "stylelint": "^8.1.1",
    "stylelint-scss": "^2.1.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "history": "^4.7.2",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "i18next": "^11.3.2",
    "i18next-browser-languagedetector": "^2.1.0",
    "i18next-localstorage-cache": "^1.1.1",
    "i18next-sprintf-postprocessor": "^0.2.2",
    "i18next-xhr-backend": "^1.5.0",
    "isomorphic-fetch": "^2.2.1",
    "normalizr": "^3.2.4",
    "postcss-conditionals": "^2.1.0",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.6",
    "postcss-mixins": "^6.1.1",
    "postcss-nested": "^2.1.2",
    "postcss-simple-vars": "^4.1.0",
    "prop-types": "^15.6.0",
    "react": "^16.4.1",
    "react-document-title": "^2.0.3",
    "react-dom": "^16.4.0",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-i18next": "^7.7.0",
    "reset.css": "^2.0.2",
    "script-ext-html-webpack-plugin": "^1.8.5",
    "stylelint-webpack-plugin": "^0.9.0",
    "style-loader": "^0.18.2",
    "svg-sprite-loader": "^3.2.5",
    "svgo-loader": "^1.2.1",
    "transfer-webpack-plugin": "^0.1.4",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "url-loader": "^0.5.9",
    "webpack": "^3.6.0"
  },
  "jest": {
    "modulePaths": [
      "src/app"
    ],
    "moduleNameMapper": {
      "^Config": "<rootDir>/config/app/dev.js",
      "^Utils": "<rootDir>/src/utils/index.js",
      "^Components": "<rootDir>/src/src/components/",
      "^Images": "<rootDir>/src/assets/images/",
      "^Icons": "<rootDir>/src/assets/icons/",
      "^Styles": "<rootDir>/src/assets/styles/",
      "^types": "<rootDir>/src/types/index.js",
      "^schemas": "<rootDir>/src/schemas/index.js",
      "^selectors": "<rootDir>/src/selectors/index.js",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/src/__mocks__/styleMock.js"
    },
    "coverageReporters": [
      "clover",
      "json",
      "text",
      "html"
    ]
  }
}
